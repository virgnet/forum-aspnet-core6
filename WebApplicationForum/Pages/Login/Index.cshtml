@page
@model WebApplicationForum.Pages.Login.IndexModel
@{
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            @if (!Model.userId.Equals(Guid.Empty))
            {
                <h3>Hello, @Model.userName</h3>
                <a class="btn btn-outline-danger" asp-page="/Login/LogOff">LogOff</a>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        Login
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">User</label>
                                <div class="col-sm-10">
                                    <input asp-for="user.Username" class="form-control" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" asp-for="user.Password" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-outline-primary">Sign in</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

