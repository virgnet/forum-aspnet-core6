@page "{id:guid}"
@model WebApplicationForum.Pages.Topic.EditModel
@{
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    Edit topic
                </div>
                <form method="post">
                    <div class="card-body">
                        <input hidden asp-for="topic.TopicId" class="form-control" />
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input asp-for="topic.Title" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea rows="3" asp-for="topic.Description" class="form-control"> </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a class="btn btn-outline-danger mr-3" asp-page="/Index">Cancel</a>
                        <button type="submit" class="btn btn-outline-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
